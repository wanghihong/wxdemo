page{
    background: #fff;
}
.list-wrap{
    width: 700rpx;
    margin:0 auto;
}
.list{
   display: flex;
   width: 100%;
   height: 140rpx; 
   border-bottom:1px solid #F1F1F1;
   align-items:center;
   position: relative;
}
.list .left-img{
    width: 100rpx;
    height: 100rpx;
    border-radius: 16rpx;
}
.text-right{
    margin-left: 20rpx;
}
.text-right .title{
    line-height: 50rpx;
    font-size: 16px;
    display: block;
}
.text-right .day-data,.topic{
    font-size: 10px;
    color:#999;
    display: block;
}
.right-arrow{
    width:16px;
    height:16px;
    position: absolute;
    right: 0px;
    
    
}